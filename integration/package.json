{
  "name": "@synnaxlabs/integration",
  "version": "0.0.1",
  "type": "module",
  "description": "End-to-end integration tests for Synnax platform",
  "scripts": {
    "test": "playwright test --config=test/playwright/playwright.config.ts",
    "test:ui": "playwright test --config=test/playwright/playwright.config.ts --ui",
    "test:debug": "playwright test --config=test/playwright/playwright.config.ts --debug",
    "test:headed": "playwright test --config=test/playwright/playwright.config.ts --headed",
    "test:report": "playwright show-report test/playwright/playwright-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}